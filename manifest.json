{
  "manifest_version": 2,
  "name": "Tab Switcher",
  "author": "Kalle Persson",
  "version": "1.0",
  "description": "Type to find an and open tap in this window. Keyboard shortcut: âŒ˜/Ctrl + Shift + K",
  "permissions": [
    "tabs"
  ],
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "fuse.js",
      "background.js"
    ]
  },
  "browser_action": {
    "default_popup": "switcher.html"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+K"
      }
    }
  }
}